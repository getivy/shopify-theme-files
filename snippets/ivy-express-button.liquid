{% assign is_checkout = is_checkout | default: false %}
<script>
  async function startCheckout(type){
      if (
        type === "product"
      ) {
        const variant = (new URL(document.location)).searchParams.get("variant")
        if (!variant) return

        await fetch(`${window.Shopify.routes.root}cart/add.js`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            items: [
              {
                id: variant.toString(),
                quantity: 1,
              },
            ],
          }),
        });
      }

      await fetch("/cart.json")
        .then((response) => response.json())
        .then((cartData) => {
          cartData.errorCallbackUrl = window.location.href

          fetch('{{ settings.ivy_gateway_url }}/checkout/express/create', {
            method: "POST",
            mode: "cors",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(cartData),
          })
            .then((response) => response.json())
            .then((checkoutSessionData) => {
              startIvyCheckout(checkoutSessionData.redirectUrl, "popup");
            })
            .catch((error) => console.error("Error:", error));
        });
    }
</script>
<button type="button" onclick='startCheckout("{{ type }}")'  class="ivy-express-checkout ivy-checkout-button" data-locale="{{ request.locale.iso_code }}" data-type="{{ type }}"
  {% if is_checkout %}data-position="above"{% endif %}></button> 
