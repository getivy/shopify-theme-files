{% layout none %}

{
  "price": {
    "totalNet": {{ product.selected_or_first_available_variant.price | times: 1.00 | divided_by: 100 }},
    "total": {{ product.selected_or_first_available_variant.price | times: 1.00 | divided_by: 100 }},
    "currency": "{{ cart.currency.iso_code }}",
    "shipping": 0,
    "vat": 0
  },
  "lineItems": [
    {
      "name": "{{ product.title | escape }}{%- unless product.has_only_default_variant -%} {{ product.selected_or_first_available_variant.title | escape }}{%- endunless -%}",
      "singleNet": {{ product.selected_or_first_available_variant.price | times: 1.00 | divided_by: 100 }},
      "singleVat": 0,
      "amount": {{ product.selected_or_first_available_variant.price | times: 1.00 | divided_by: 100 }},
      "quantity": 1,
      "referenceId": {{ product.selected_or_first_available_variant.id }}
    }
  ]
}